{
  "name": "filosign",
  "version": "1.0.0",
  "description": "Filosign monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "client:dev": "bun run --cwd packages/client dev",
    "client:build": "bun run --cwd packages/client build",
    "client:start": "bun run --cwd packages/client start",
    "server:start": "bun run --cwd packages/server index",
    "test": "bun run --cwd packages/* test",
    "lint": "bun run --cwd packages/* lint",
    "clean": "rm -rf packages/*/dist packages/*/node_modules packages/*/.bun node_modules .bun",
    "install:all": "bun install && bun run --cwd packages/client install",
    "setup": "bun install && bun run install:all",
    "prepare": "husky",
    "fmt": "prettier --write ."
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.0.0",
  "devDependencies": {
    "husky": "9.1.7",
    "prettier": "3.6.2",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "dotenv": "17.2.3"
  }
}
